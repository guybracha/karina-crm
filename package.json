{
  "name": "karina-crm",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "build:web": "vite build",
    "build:desktop": "npm run build:web && electron-builder",
    "build:desktop:unsigned": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build:web && electron-builder --win --config.win.signAndEditExecutable=false",
    "start:desktop": "electron .",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.5",
    "axios": "^1.12.1",
    "bootstrap": "^5.3.8",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.5.0",
    "electron-google-oauth2": "^3.1.0",
    "jszip": "^3.10.1",
    "multer": "^2.0.2",
    "papaparse": "^5.5.3",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-firebase-hooks": "^5.1.1",
    "react-hook-form": "^7.65.0",
    "react-router-dom": "^7.9.1",
    "recharts": "^3.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.38.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "vite": "^7.2.1",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.karina.crm",
    "productName": "Karina CRM",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
